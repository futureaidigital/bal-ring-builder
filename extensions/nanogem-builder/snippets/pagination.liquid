<!-- extensions/nanogem-builder/snippets/pagination.liquid -->
{% comment %}
  Renders pagination for collections
  
  Accepts:
  - paginate: {Object} Paginate Liquid object
  
  Usage:
  {% render 'pagination', paginate: paginate %}
{% endcomment %}

{%- if paginate.pages > 1 -%}
  <nav class="pagination" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
    <ul class="pagination__list">
      {%- if paginate.previous -%}
        <li>
          <a href="{{ paginate.previous.url }}" class="pagination__item pagination__item--prev">
            <span aria-hidden="true">&larr;</span>
            {{ 'general.pagination.previous' | t }}
          </a>
        </li>
      {%- endif -%}

      {%- for part in paginate.parts -%}
        <li>
          {%- if part.is_link -%}
            <a href="{{ part.url }}" class="pagination__item">{{ part.title }}</a>
          {%- else -%}
            {%- if part.title == paginate.current_page -%}
              <span class="pagination__item pagination__item--current" aria-current="page">{{ part.title }}</span>
            {%- else -%}
              <span class="pagination__item">{{ part.title }}</span>
            {%- endif -%}
          {%- endif -%}
        </li>
      {%- endfor -%}

      {%- if paginate.next -%}
        <li>
          <a href="{{ paginate.next.url }}" class="pagination__item pagination__item--next">
            {{ 'general.pagination.next' | t }}
            <span aria-hidden="true">&rarr;</span>
          </a>
        </li>
      {%- endif -%}
    </ul>
  </nav>
{%- endif -%}

<style>
  .pagination {
    margin: 2rem 0;
    text-align: center;
  }

  .pagination__list {
    display: inline-flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 0.5rem;
  }

  .pagination__item {
    display: inline-block;
    padding: 0.5rem 1rem;
    text-decoration: none;
    border: 1px solid #e5e7eb;
    border-radius: 0.375rem;
    color: inherit;
    transition: all 0.2s;
  }

  .pagination__item:hover {
    background-color: #f3f4f6;
    border-color: #d1d5db;
  }

  .pagination__item--current {
    background-color: #3b82f6;
    color: white;
    border-color: #3b82f6;
  }

  .pagination__item--prev,
  .pagination__item--next {
    font-weight: 500;
  }
</style>